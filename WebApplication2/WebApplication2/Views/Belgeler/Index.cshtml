@model IEnumerable<WebApplication2.Models.Belgeler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Belgeler</h1>

<p>
    @Html.ActionLink("Belge Ekle","Create","Belgeler")
</p>
<table class="table table-bordered table-striped" id="datatablesSimple">
    <thead class="bg-info bg-opacity-80 text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ogrenci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tskbelge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.takdirbelge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.onurbelge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.basaribelge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ogrenci.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tskbelge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.takdirbelge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.onurbelge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.basaribelge)
            </td>
            <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Belge Detayı", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
</table>
<script src="~/js/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#datatablesSimple').DataTable({

        });
    });</script>